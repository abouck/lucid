<div class="search_container">
	<form class="form-inline" role="form">
  		<div class="form-group">
			<%= form_tag tweets_path, :method => 'get' do %>
			<div class="form-group">
			    <%= text_field_tag :tweetsearch, params[:tweetsearch], placeholder: "Search Query or #hashtag", class: 'form-control' %>
			</div>
			    <%= submit_tag "Search", :name => nil, type: "submit", class: 'btn btn-default' %>
			<% end %>
		</div>
	</form>
</div>

<hr/>


<div class="container">
<div class="text"><%= link_to 'Back', root_path %></div>

 <table class="table table-hover">
  	<tr>
  		<th>Tweet Search Results</th>
  	</tr>


  	<% if @tweetsearch %>
	    <% @tweetsearch.each do |tweet| %>
	    <tr>
	    	<td class="text"><%= link_to tweet.text, "https://www.twitter.com/#{tweet.user.screen_name}" %></td>
	    </tr>
	   <% end %>   
	<% end %>
  </table>
  </div>