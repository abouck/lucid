
<table class="table table-hover">
  	<tr>
  		<th>Your Tweets</th>
  	</tr>

	    <% @own_timeline.each do |tweet| %>
	    <tr>
	    	<td><%= link_to tweet.text, "https://www.twitter.com/#{tweet.user.screen_name}" %></td>
	    </tr>

   <% end %>   
  </table>



